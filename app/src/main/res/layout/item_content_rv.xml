<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sv_content_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        fresco:actualImageScaleType ="fitCenter"

        fresco:retryImage="@drawable/refresh"
        fresco:retryImageScaleType="center"

        fresco:progressBarImage="@drawable/loading"
        fresco:progressBarImageScaleType="center"
        fresco:progressBarAutoRotateInterval="1000"

        fresco:failureImage="@drawable/loading_failed"
        fresco:failureImageScaleType = "center"


        />
</LinearLayout>
